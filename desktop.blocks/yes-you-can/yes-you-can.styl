.yes-you-can
{
    position: relative;

    display: inline-block;

    padding-top: 15px;

    box-sizing: border-box;

    &:hover
    {
        .yes-you-can__control
        {
            border: 1px dotted #cecece;
        }

        .yes-you-can__info,
        .yes-you-can__settings
        {
            visibility: visible;
        }
    }

    .yes-you-can__control
    {
        padding: 10px;

        border-radius: 4px;
        border:        1px dotted transparent;

        transition: border-color 200ms ease;
    }

    .yes-you-can__info
    {
        position: absolute;

        top:  0;
        left: 0;

        font-family: 'Robotp', sans-serif;
        font-weight: 100;

        font-size: remify(12px);

        color: #a7a7a7;

        visibility: hidden;

        padding-bottom: 5px;

        transition: border-color 200ms ease;
    }

    .yes-you-can__settings
    {
        visibility: hidden;

        padding-top: 10px;

        transition: border-color 200ms ease;
    }
}
